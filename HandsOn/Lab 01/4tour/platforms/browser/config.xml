<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.ljospin" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>4tour</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <icon src="www/img/android/icon_4linux.png" />
    <icon density="ldpi" platform="android" src="www/img/android/icon_4linux_ldpi.png" />
    <icon density="mdpi" platform="android" src="www/img/android/icon_4linux_mdpi.png" />
    <icon density="hdpi" platform="android" src="www/img/android/icon_4linux_hdpi.png" />
    <icon density="xhdpi" platform="android" src="www/img/android/icon_4linux_xhdpi.png" />
    <icon density="xxhdpi" platform="android" src="www/img/android/icon_4linux_xxhdpi.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="1000" />
    <splash density="ldpi" platform="android" src="www/img/android/splash/bg_4linux_ldpi.png" />
    <splash density="mdpi" platform="android" src="www/img/android/splash/bg_4linux_mdpi.png" />
    <splash density="hdpi" platform="android" src="www/img/android/splash/bg_4linux_hdpi.png" />
    <splash density="xhdpi" platform="android" src="www/img/android/splash/bg_4linux_xhdpi.png" />
    <splash density="xxhdpi" platform="android" src="www/img/android/splash/bg_4linux_xxhdpi.png" />
    <splash density="xxxhdpi" platform="android" src="www/img/android/splash/bg_4linux_xxxhdpi.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
